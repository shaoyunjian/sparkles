    <!-- right box: chatroom -->
    <div class="cell is-fluid is-vertical right-box" id="chatbox">
      <div class="cell">
        <div class="ts-content">
          <div class="column is-fluid">
            <div class="ts-text is-bold">Sparkles</div>
          </div>
        </div>
      </div>

      <!-- room  -->
      <div class="right-box-chatroom">

      </div>
      <div class="cell top-bar">
        <div class="ts-content">
          <div class="ts-row is-middle-aligned">
            <div class="column avatar">
              <div class="ts-avatar is-circular is-large" id="chatbox-top-bar-avatar">
                <img src="https://v4.tocas-ui.com/zh-tw/assets/images/user.png" />
